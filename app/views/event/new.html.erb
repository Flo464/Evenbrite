

<h1>Créer son event</h1>

<%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Date' %>
      <%= text_field_tag 'start_date', @event.start_date %>
      <br /> <br />

      <%= label_tag 'Durée' %>
      <%= text_area_tag 'duration', @event.duration %>
      <br /> <br />

      <%= label_tag 'Titre' %>
      <%= text_area_tag 'title', @event.title %>
      <br /> <br />

      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', @event.description %>
      <br /> <br />

      <%= label_tag 'Prix' %>
      <%= text_area_tag 'price', @event.price %>
      <br /> <br />

      <%= label_tag 'Ville' %>
      <%= text_area_tag 'location', @event.location %>
      <br /> <br />

      <%= submit_tag "Créer l'évènement" %>

<% end %>

<%if @event%>

  <% if @event.errors.any? %>

    <p>Nous n'avons pas réussi à créer l'event pour la (ou les) raison(s) suivante(s) :</p>

    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  <% end %>

<%end%>